\c 43 

\s BWANA UNIREHEMU
\zon1 1
\zoli1 \bd Mimi mwenye dhambi ningekufa; lakini wewe Bwana wangu ukazichukua; Yesu ulikubali kuchubuliwa ili mimi mwenye dhambi niokolewe.\bd*
\pc \bdit {\bdit*\bdit Bwana nakuomba unirehemu; nifuate nyayo zako milele\bdit*\bdit .} x2\bdit*
\zoli1 \bd Pale Golgota Yesu Bwana wangu; ukasema leo yote yamekwisha; niliwekwa huru na damu yako; nilinunuliwa kwa thamani nyingi.\bd*
\pc \bdit {\bdit*\bdit Bwana nakuomba unirehemu; nifuate nyayo zako milele\bdit*\bdit .} x2\bdit*
\zoli1 \bd Wateule wako tunangojea; ahadi zako zitatimizwa; mvua itanyesha na tutanyakuliwa; Mbingu tutaishi hata kutawala.\bd*
\pc \bdit {\bdit*\bdit Bwana nakuomba unirehemu; nifuate nyayo zako milele\bdit*\bdit .} x2\bdit*
\zoli1 \bd Katika safari wengi walikufa; wengi majeraha na kurudi nyuma; njia ni nyembamba tunakazana kwa neema yako tutamaliza\bd*
\pc \bdit {\bdit*\bdit Bwana nakuomba unirehemu; nifuate nyayo zako milele\bdit*\bdit .} x2\bdit*
\zoli1 \bd Mateso na shida tutavisahau hata na machozi yetu utapangusa; tutashangilia tutafurahia wewe Bwana-Arusi tukikulaki.\bd*
\pc \bdit {\bdit*\bdit Bwana nakuomba unirehemu; nifuate nyayo zako milele\bdit*\bdit .} x2\bdit*
